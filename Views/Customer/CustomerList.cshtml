@model List<ContainerManagementSystem.Models.User.User>

<script>
    $(document).ready(function () {
        $('#btnAddNewCustomer').on('click', function () {
            EditCustomer('00000000-0000-0000-0000-000000000000');
        })
    });

    function EditCustomer(user_id) {
        $.ajax({
            url: '/Customer/EditCustomer',
            data: { user_id: user_id },
            success: function (data) {
                $('#divBody').html(data);
            },
            error: function (data) { }
        });
    }
</script>

<div id="CustomerListPage" class="m-l-m m-r-m">
    <div class="row">
        <div class="col-lg-12 content-right">
            <input type="button" id="btnAddNewCustomer" value="Add New" />
        </div>
    </div>
    <div class="row">
        <table class="responstable" id="AgentsTable">
            <thead>
                <tr>
                    <th class="" style="display:none;">
                        <b>UserId</b>
                    </th>
                    <th class="col-lg-2">
                        <b>First Name</b>
                    </th>
                    <th class="col-lg-2">
                        <b>Last Name</b>
                    </th>
                    <th class="col-lg-2">
                        <b>Email</b>
                    </th>
                    <th class="col-lg-2">
                        <b>Action</b>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td class="col-lg-2" style="display:none;">@Model[i].UserId</td>

                            <td class="col-lg-2">@Model[i].FirstName</td>

                            <td class="col-lg-2">@Model[i].LastName</td>

                            <td class="col-lg-2">@Model[i].Email</td>


                            <td class="col-lg-2">
                                <input type="button" onclick="EditCustomer('@Model[i].UserId')" value="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


