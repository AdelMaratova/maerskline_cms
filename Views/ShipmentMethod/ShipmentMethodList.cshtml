@model List<ContainerManagementSystem.Models.ShippingChannel.ShippingChannel>

<script>
    $(document).ready(function () {
        $('#btnAddNewShipmentMethod').on('click', function () {
            EditShipmentMethod('00000000-0000-0000-0000-000000000000');
        })
    });

    function EditShipmentMethod(shipping_channel_id) {
        $.ajax({
            url: '/ShipmentMethod/EditShipmentMethod',
            data: { shipping_channel_id: shipping_channel_id },
            success: function (data) {
                $('#divBody').html(data);
            },
            error: function (data) { }
        });
    }
</script>

<div id="ShipmentMethodListPage" class="m-l-m m-r-m">
    <div class="row">
        <div class="col-lg-12 content-right">
            <input type="button" id="btnAddNewShipmentMethod" value="Add New" />
        </div>
    </div>
    <div class="row">
        <table class="responstable" id="ShipmentMethodsTable">
            <thead>
                <tr>
                    <th class="" style="display:none;">
                        <b>ShippingChannelId</b>
                    </th>
                    <th class="col-lg-2">
                        <b>Shipping Channel Name</b>
                    </th>
                    <th class="col-lg-2">
                        <b>Method</b>
                    </th>
                    <th class="col-lg-2">
                        <b>Capacity</b>
                    </th>
                    <th class="col-lg-2">
                        <b>Action</b>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td class="col-lg-2" style="display:none;">@Model[i].ShippingChannelId</td>

                            <td class="col-lg-2">@Model[i].ShippingChannelName</td>

                            <td class="col-lg-2">@Model[i].ShippingMethod</td>

                            <td class="col-lg-2">@Model[i].ShippingChannelsCapacity</td>


                            <td class="col-lg-2">
                                <input type="button" onclick="EditShipmentMethod('@Model[i].ShippingChannelId')" value="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


